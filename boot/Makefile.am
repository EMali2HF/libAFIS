# recommended by libtoolize
ACLOCAL_AMFLAGS = -I m4lib

SUBDIRS    = gen
CLEANFILES =

# ---------------------------------------------------------------------------
# Main
# ---------------------------------------------------------------------------

.PHONY: all-local
all-local::

# ---------------------------------------------------------------------------
# Auto configuration helper
# ---------------------------------------------------------------------------

.PHONY: libtool
libtool: $(LIBTOOL_DEPS)
	$(SHELL) ./config.status --recheck

.PHONY: autoreconf reconf
autoreconf reconf: libtool
	rm -f $(AUTOGENERATED)
	touch configure.ac
	autoreconf

# ---------------------------------------------------------------------------
# Admin stuff
# ---------------------------------------------------------------------------

.PHONY: clean-local
clean-local::

.PHONY: distclean-local
distclean-local::
	rm -f *~

# ---------------------------------------------------------------------------
# End
# ---------------------------------------------------------------------------
